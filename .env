# =====================================================
# üåê AI AGENT DESK - Environment Configuration Example
# =====================================================

# -------------------------------
# ü§ñ GEMINI API Configuration
# -------------------------------
GEMINI_API_KEY=<YOUR_GEMINI_API_KEY_HERE>          # Gemini API key from Google AI Studio

# -------------------------------
# ‚öôÔ∏è Core Server Configuration
# -------------------------------
PORT=4000
NODE_ENV=development                               # change to 'production' for live server
MONGO_URI=<YOUR_MONGODB_CONNECTION_STRING_HERE>    # e.g. mongodb+srv://user:pass@cluster.mongodb.net/dbname

# -------------------------------
# üîê Authentication & Security
# -------------------------------
JWT_SECRET=<YOUR_JWT_ACCESS_SECRET>                # e.g. random long string
REFRESH_TOKEN_SECRET=<YOUR_REFRESH_SECRET>         # e.g. random long string

ACCESS_TOKEN_EXPIRES_IN=15m                        # Access token lifetime
REFRESH_TOKEN_EXPIRES_IN=7d                        # Refresh token lifetime
BCRYPT_SALT_ROUNDS=10

# Cookie configuration
REFRESH_COOKIE_NAME=refreshToken
REFRESH_COOKIE_MAX_AGE=604800000                   # 7 days in ms
REFRESH_COOKIE_SAMESITE=None                       # None | Strict | Lax
REFRESH_COOKIE_PATH=/
# REFRESH_COOKIE_DOMAIN=yourdomain.com              # Uncomment and set in production

# -------------------------------
# üîÅ Password Reset & Support
# -------------------------------
PASSWORD_RESET_TOKEN_EXPIRES=1h                    # Token expiry time
PASSWORD_RESET_PATH=/reset-password                # Path in frontend app
SUPPORT_URL=https://support.example.com/contact

# -------------------------------
# üñ•Ô∏è Frontend / CORS Configuration
# -------------------------------
FRONTEND_ORIGIN=http://localhost:4200              # Angular app URL for CORS

# -------------------------------
# üìß Email Settings (Choose one method)
# -------------------------------
# --- Option 1: Gmail SMTP (Recommended for testing) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<YOUR_GMAIL_ADDRESS_HERE>
SMTP_PASS=<YOUR_GMAIL_APP_PASSWORD_HERE>
MAIL_FROM=<YOUR_GMAIL_ADDRESS_HERE>
MAIL_FROM_NAME="AI Agent Desk"
MAIL_MAX_RETRIES=3
MAIL_RETRY_MIN_MS=500

# --- Option 2: SendGrid (if using SendGrid) ---
# SENDGRID_API_KEY=<YOUR_SENDGRID_API_KEY>
# SENDGRID_FROM_EMAIL=<YOUR_VERIFIED_EMAIL>
# SENDGRID_FROM_NAME="AI Agent Desk"

# -------------------------------
# ü™µ Logging / Monitoring
# -------------------------------
LOG_LEVEL=info                                    # debug | info | warn | error
ENABLE_AUDIT_LOGS=true

# -------------------------------
# üí° Additional Environment Options
# -------------------------------
DISABLE_MONGO_TRANSACTIONS=true
